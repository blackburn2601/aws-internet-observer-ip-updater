[Unit]
Description=AWS Internet Observer IP Updater
After=network.target

[Service]
Type=simple
User=administrator
WorkingDirectory=/home/administrator/aws-internet-observer-ip-updater
Environment=PYTHONUNBUFFERED=1
# EnvironmentFile=/home/administrator/aws-internet-observer-ip-updater/.env
ExecStart=/home/administrator/aws-internet-observer-ip-updater/venv/bin/python3 /home/administrator/aws-internet-observer-ip-updater/aws-internet-observer-local.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target